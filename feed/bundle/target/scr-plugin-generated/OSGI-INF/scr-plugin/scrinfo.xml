<?xml version="1.0" encoding="UTF-8"?>
<components xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0">
    <scr:component enabled="true" name="com.sample.feed.schedulers.MyScheduler">
        <implementation class="com.sample.feed.schedulers.MyScheduler"/>
        <property name="service.pid" value="com.sample.feed.schedulers.MyScheduler" private="false"/>
        <reference name="scheduler" interface="org.apache.sling.commons.scheduler.Scheduler" cardinality="1..1" policy="static" bind="bindScheduler" unbind="unbindScheduler" checked="true" strategy="event"/>
        <reference name="repositoy" interface="org.apache.sling.jcr.api.SlingRepository" cardinality="1..1" policy="static" bind="bindRepositoy" unbind="unbindRepositoy" checked="true" strategy="event"/>
    </scr:component>
    <scr:component enabled="true" name="com.sample.feed.schedulers.WhiteBoardScheduler" activate="activate">
        <implementation class="com.sample.feed.schedulers.WhiteBoardScheduler"/>
        <service servicefactory="false">
            <provide interface="java.lang.Runnable"/>
        </service>
        <property name="scheduler.expression" type="String" value="0 * * * * ?" private="false"/>
        <property name="my.whiteboard.maxsize" type="Integer" value="0" private="false"/>
        <property name="cq.sample.feed.feeds.bucketsize" type="Integer" value="500" private="false"/>
        <property name="service.pid" value="com.sample.feed.schedulers.WhiteBoardScheduler" private="false"/>
    </scr:component>
</components>
